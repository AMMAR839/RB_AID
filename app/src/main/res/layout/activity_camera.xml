<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Preview kamera -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay kotak bidik -->
    <com.example.app_rb_aid.CameraOverlayView
        android:id="@+id/CameraOverlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Teks petunjuk -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ambil foto mata kanan"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="150dp" />

    <!-- Pratinjau foto saat review -->
    <ImageView
        android:id="@+id/capturedImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="#000000"
        android:visibility="gone" />

    <!-- Tombol JEPRET (tengah) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/captureFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/camera_svgrepo_com"
        app:fabCustomSize="84dp"
        app:maxImageSize="50dp"
        app:backgroundTint="@color/orange"
        app:tint="@android:color/white"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        app:borderWidth="2dp" />


    <!-- Pilih dari galeri (kiri) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/pickFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/set_picture_galery_svgrepo_com"
        app:fabCustomSize="72dp"
        app:maxImageSize="50dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="24dp"
        app:backgroundTint="@color/white"
        app:tint="@color/black"
        />

    <!-- Skip (kanan) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/skipFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/skip_next_svgrepo_com__1_"
        app:fabCustomSize="72dp"
        app:maxImageSize="50dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="24dp"
        app:backgroundTint="@color/white"
        app:tint="@color/black"/>

    <!-- Aksi REVIEW (muncul di atas tiga FAB) -->
    <LinearLayout
        android:id="@+id/reviewActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="36dp"
        android:visibility="gone"
        android:elevation="10dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/redoFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_round_retake"
            app:fabCustomSize="72dp"
            app:maxImageSize="28dp"
            app:backgroundTint="@android:color/white"
            app:tint="@android:color/black"
            android:layout_marginEnd="20dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/confirmFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_round_check"
            app:fabCustomSize="72dp"
            app:maxImageSize="28dp"
            app:backgroundTint="@color/orange"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- Flash putih (harus paling atas) -->
    <View
        android:id="@+id/flashOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:alpha="0"
        android:visibility="gone" />
</FrameLayout>
